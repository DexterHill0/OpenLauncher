{
	"name": "openlauncher",
	"version": "1.0.0",
	"description": "A place for all your games!",
	"main": "./build/index.js",
	"scripts": {
		"build": "tsc",
		"electron:start": "npm run build && electron ./",
		"electron:pack": "npm run build && electron-builder build --dir",
		"electron:build-windows": "npm run build && electron-builder build --windows",
		"electron:build-mac": "npm run build && electron-builder build --mac"
	},
	"dependencies": {
		"@capacitor-community/electron": "^1.3.3",
		"@types/history": "^4.7.8",
		"discord-rpc": "^3.1.4",
		"electron-badge": "^0.3.2",
		"electron-context-menu": "^3.1.1",
		"electron-fetch": "^1.7.3",
		"form-data": "^4.0.0",
		"jquery": "^3.5.1",
		"requirejs": "^2.3.6"
	},
	"devDependencies": {
		"@types/jquery": "^3.5.5",
		"electron": "^11.2.2",
		"electron-builder": "^22.9.1",
		"typescript": "~4.0.5"
	},
	"keywords": [
		"capacitor",
		"electron"
	],
	"author": "Dexter Hill",
	"license": "MIT",
	"build": {
		"appId": "com.dexterhill.openlauncher",
		"productName": "OpenLauncher",
		"files": [
			"assets/*",
			"build/*",
			"preloader.js",
			"plugins/*",
			"capacitor.config.json",
			"app/**"
		],
		"mac": {
			"category": "public.app-category.developer-tools",
			"target": "dmg",
			"icon": "appIcon.png"
		},
		"win": {
			"target": "nsis",
			"icon": "appIcon.ico"
		}
	}
}
